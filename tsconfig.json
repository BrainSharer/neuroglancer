{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "incremental": true,
    "target": "ES2017",
    "newLine": "LF",
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "#/*": ["src/*"],
      "jpgjs": ["third_party/jpgjs/jpg.js"],
      "neuroglancer-testdata/*": ["testdata/*"]
    },
    "lib": ["dom", "es2020", "dom.iterable"],
    "typeRoots": [],
    "module": "ESNext"
  },
  "exclude": [
    "node_modules",
    "dist",
    "templates",
    "python",
    "testdata",
    "examples",
    "config",
    "src/brainshare/docs"
  ],
  "typedocOptions": {
        "entryPoints": ["./src"],
        "entryPointStrategy": "expand",
        "exclude": ["./src/**/*.spec.ts"],
        "excludeExternals": false,
        "excludePrivate": false,
        "excludeProtected": false,
        "out": "src/brainshare/docs/typedoc"    
      }
  }
